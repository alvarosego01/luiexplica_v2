{% set faqs_1_background_color = fields.faqs_1_background_color %}
{% set faqs_1_title = fields.faqs_1_title %}
{% set faqs_1_items = fields.faqs_1_items %}


<section class="bg-{{ faqs_1_background_color }}">
	<div class="max-w-6xl px-4 mx-auto sm:px-6">
		<div
			class="py-8 md:py-20 border-slate-50">

            {% if faqs_1_title != '' %}
			<div
                   data-aos="fade-in"
            class="max-w-3xl pb-8 mx-auto text-center md:pb-10">
				<h2 class="h2 text-slate-800">
                    {{ faqs_1_title }}
                </h2>
			</div>
            {% endif %}

            {% if faqs_1_items|length > 0 %}
			<ul class="max-w-3xl mx-auto divide-y divide-slate-200">
            {% for item in faqs_1_items %}

                              {% set index = index + 1 %}
				<li x-data="{ expanded: true }"
                data-aos="fade-up"
                data-aos-delay={{ index * 100 }}
                >
					<button class="flex items-center justify-between w-full py-5 text-left h4 " @click="expanded = !expanded" :aria-expanded="expanded">
						<span>
                            {{ item.faq_1_title }}
                        </span>
						<svg class="w-4 h-4 ml-8 text-blue-600 fill-current shrink-0" :class="{'rotate-180': expanded}" viewbox="0 0 16 16">
							<path d="m3 5 5 6 5-6z"/>
						</svg>
					</button>
					<div x-ref="item" class="overflow-hidden transition-all duration-300 ease-in-out text-slate-500" :style="expanded ? 'max-height: ' + $refs.item.scrollHeight + 'px; opacity: 1' : 'max-height: 0; opacity: 0'">
						<div class="pb-5">
                        {{ item.faq_1_description }}
						</div>
					</div>
				</li>
            {% endfor %}
                </ul>
            {% endif %}

		</div>
	</div>
</section>
