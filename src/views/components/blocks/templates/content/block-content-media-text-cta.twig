


{% set media_text_cta_1_title = fields.media_text_cta_1_title %}
{% set media_text_cta_1_sections = fields.media_text_cta_1_sections %}
{% set media_text_cta_1_subtitle = fields.media_text_cta_1_subtitle %}


<section>

	<div class="relative max-w-6xl px-4 mx-auto sm:px-6">
		<div
			class="py-12 md:py-18">

			{# <div class="hidden md:block absolute top-0 left-1/2 -ml-px -mt-4 w-0.5 h-12 bg-slate-200" aria-hidden="true"></div> #}

            <div class="space-y-10"
            data-aos="fade-in"
            >
              {% if media_text_cta_1_title != '' %}
                    <h2 class="leading-normal text-center h2 text-slate-800">
                        {{ media_text_cta_1_title }}
                    </h2>
                    {% endif %}
                    {% if media_text_cta_1_subtitle != '' %}
                    <div class="text-xl leading-normal text-center text-slate-500">{{ media_text_cta_1_subtitle }}</div>
                    {% endif %}

            </div>
			<div
				class="max-w-xl mx-auto mt-20 space-y-20 md:max-w-none">


                {% if media_text_cta_1_sections|length > 0 %}

                {% for item in media_text_cta_1_sections %}

                    {% set media_text_cta_1_title = item.media_text_cta_1_title %}
                    {% set media_text_cta_1_description = item.media_text_cta_1_description %}
                    {% set media_text_cta_1_enable_button = item.media_text_cta_1_enable_button %}
                    {% set media_text_cta_1_button_label = item.media_text_cta_1_button_label %}
                    {% set media_text_cta_1_button_url = item.media_text_cta_1_button_url %}
                    {% set media_text_cta_1_button_color = item.media_text_cta_1_button_color %}
                    {% set media_text_cta_1_type_media = item.media_text_cta_1_type_media %}
                    {% set media_text_cta_1_image_portrait = item.media_text_cta_1_image_portrait %}
                    {% set media_text_cta_1_video = item.media_text_cta_1_video %}

                    {% set index = index + 1 %}

				<div
                   x-data="{ modalExpanded: false }"
					class="
                        {% if (index % 2) == 0  %}

                            flex flex-col-reverse space-y-4 space-y-reverse md:flex-row md:items-center md:space-x-8 lg:space-x-16 xl:space-x-20 md:space-y-0

                        {% else %}
                            flex flex-col-reverse space-y-4 space-y-reverse md:flex-row-reverse md:items-center md:space-x-reverse lg:space-x-reverse xl:space-x-reverse md:space-x-8 lg:space-x-16 xl:space-x-20 md:space-y-0
                        {% endif %}
                    ">

					<div class="md:w-6/12" data-aos="fade-left"
                    data-aos-delay={{ index * 100 }}
                    >
						<h2 class="mb-4 h3 md:text-4xl text-slate-800 ">
                            {{ media_text_cta_1_title }}
						</h2>
						<div class="pl-4 mb-8 text-xl border-l-2 text-slate-500 border-slate-800">
                            {{ media_text_cta_1_description }}
                        </div>

                        {% if media_text_cta_1_enable_button == 1 %}
                            <div class="flex justify-start w-full space-y-4 ">
                                {% include "components/common/Button.twig" with {
                                    'text': media_text_cta_1_button_label,
                                    'path': media_text_cta_1_button_url,
                                    'type': media_text_cta_1_button_color
                                }
                            %}
                        </div>
                        {% endif %}

					</div>

					<div class="flex items-center justify-center md:w-6/12" data-aos="fade-right"
                    data-aos-delay={{ index * 150 }}
                    >
						<div class="relative">
							<div class="absolute inset-0 -translate-x-4 -translate-y-4 border-2 pointer-events-none border-slate-200 -z-10" aria-hidden="true"></div>
							<img class="object-cover object-center w-auto mx-auto md:h-s_250 pcTab:h-s_350 lg:h-s_500 " src="{{ media_text_cta_1_image_portrait }}" />
						</div>
                           {% if media_text_cta_1_type_media == 'video' %}

						<button
                                       @click.prevent="modalExpanded = true"
                        class="absolute group">
							<svg class="w-16 h-16 fill-current sm:w-20 sm:h-20 group" viewbox="0 0 88 88" xmlns="http://www.w3.org/2000/svg">
								<circle class="text-white transition duration-150 ease-in-out opacity-80 group-hover:opacity-100" cx="44" cy="44" r="44"/>
								<path class="text-blue-600" d="M52 44a.999.999 0 00-.427-.82l-10-7A1 1 0 0040 37V51a.999.999 0 001.573.82l10-7A.995.995 0 0052 44V44c0 .001 0 .001 0 0z"/>
							</svg>
						</button>

                        {% endif %}
					</div>

                         {% if media_text_cta_1_type_media == 'video' %}

                        {% include "components/common/modals/modal_video.twig" with {
                            'modalExpanded': modalExpanded,
                            'video': media_text_cta_1_video
                            }
                        %}

                    {% endif %}
                                </div>

                       {% endfor %}
                        {% endif %}



			</div>

		</div>
	</div>
</section>
